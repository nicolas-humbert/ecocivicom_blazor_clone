<div class="flex-center navbar-fixed">
    <nav>
        <ul class="list-unstyled d-flex">
            <li class="px-2 m-0 fs-3">
                <a class="navbar-brand text-primary hover-primary" href="">ECOCIVICOM</a>
            </li>
            <div class="bg-mgray flex-center">
                @foreach (var e in MenuElements)
                {
                    <CascadingValue Value="@e.Name" Name="Name">
                        <CascadingValue Value="@e.Href" Name="Href">
                            <CascadingValue Value="@e.SubElements">
                                <NavMenuItem/>
                            </CascadingValue>
                        </CascadingValue>
                    </CascadingValue>
                }
            </div>
        </ul>
    </nav>   
</div>  
